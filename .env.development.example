# ===== Database (MySQL: Docker) =====
MYSQL_HOST=127.0.0.1
MYSQL_PORT=13306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DB=gavarnie_core

# ===== MongoDB (Docker) =====
MONGO_URI=mongodb://127.0.0.1:27018/gavarnie

# ===== Redis (Docker) =====
REDIS_HOST=127.0.0.1
REDIS_PORT=16379

# ===== MinIO (S3-compatible) =====
STORAGE_ENDPOINT=http://localhost:19000
STORAGE_REGION=ap-northeast-2
STORAGE_BUCKET=media
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_FORCE_PATH_STYLE=true   # MinIO는 필수

# ===== HLS (served via Nginx proxy) =====
HLS_BASE_URL=http://localhost:18080/media
HLS_SEGMENT_SECONDS=6
HLS_OUTPUT_PREFIX=hls

# 공개 URL
PUBLIC_CDN_BASE_URL=http://localhost:18080/media

# ===== App =====
NODE_ENV=development
PORT=3000

# Presign 만료(초)
PRESIGN_EXPIRES_SEC=900

# BullMQ Redis 연결
REDIS_URL=redis://localhost:16379