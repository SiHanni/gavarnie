# ===== Database (RDS MySQL) =====
MYSQL_HOST=<rds-endpoint>
MYSQL_PORT=3306
MYSQL_USER=<db_user>
MYSQL_PASSWORD=<db_password>
MYSQL_DB=gavarnie_core

# ===== Mongo (Atlas/DocDB) =====
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster-host>/gavarnie?retryWrites=true&w=majority

# ===== Redis (ElastiCache) =====
REDIS_HOST=<elasticache-endpoint>
REDIS_PORT=6379

# ===== S3 (AWS) =====
# 운영은 보통 IAM Role 사용(Access/Secret 비우고 메타데이터로 인증)
S3_ENDPOINT=
S3_REGION=ap-northeast-2
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=<prod-media-bucket>

# ===== HLS (via CDN) =====
HLS_BASE_URL=https://<cdn-domain>/media

# ===== App =====
NODE_ENV=production
PORT=3000
