# ===== Database (RDS MySQL) =====
MYSQL_HOST=<rds-endpoint>
MYSQL_PORT=3306
MYSQL_USER=<db_user>
MYSQL_PASSWORD=<db_password>
MYSQL_DB=gavarnie_core

# ===== Mongo (Atlas/DocDB) =====
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster-host>/gavarnie?retryWrites=true&w=majority

# ===== Redis (ElastiCache) =====
REDIS_HOST=<elasticache-endpoint>
REDIS_PORT=6379

# ===== S3 (AWS) =====
# 운영은 보통 IAM Role 사용(Access/Secret 비우고 메타데이터로 인증)
STORAGE_ENDPOINT=
STORAGE_REGION=ap-northeast-2
STORAGE_BUCKET=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_FORCE_PATH_STYLE=true   # MinIO는 필수

# ===== HLS (via CDN) =====
HLS_BASE_URL=
HLS_SEGMENT_SECONDS=2
HLS_OUTPUT_PREFIX=hls

# 공개 URL
PUBLIC_CDN_BASE_URL=https://<cdn-domain>/media

# ===== App =====
NODE_ENV=production
PORT=3000

# Presign 만료(초)
PRESIGN_EXPIRES_SEC=900

# BullMQ Redis 연결
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=gavarnie-jwt-829-secrest-@@$
JWT_EXPIRES=1h